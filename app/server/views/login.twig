{% extends 'layout.twig' %}

{% block content %}
<h1>{{ title }}</h1>

{% if errors %}
	<div class="alert alert-danger" role="alert">
	{% if errors == 'email-not-found' %}
	<p>Email not found</p>
	{% endif %}
	{% if errors == 'invalid-password' %}
	<p>Invalid password</p>
	{% endif %}
	</div>
{% endif %}

<form method="post">
  <div class="form-group">
    <label for="inputEmail1">Email address</label>
    <input type="email" class="form-control" id="inputEmail1" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
	<a href="/lost-password">forgotten</a>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="pass">
  </div>
  <div class="checkbox">
    <label>
      <input name="remember-me" checked="true" type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

{% endblock %}
